        function getOpenStatus(hours) {
            if (!hours) return null;
            
            const now = new Date();
            const dayNames = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
            const today = dayNames[now.getDay()];
            
            const todayHours = hours[today];
            if (!todayHours || !todayHours.length) {
                return { 
                    isOpen: false, 
                    text: getTranslation('closed_today', 'Closed today')
                };
            }
            
            const currentTime = now.getHours() * 100 + now.getMinutes();
            
            for (const period of todayHours) {
                const openTime = parseTimeString(period.opens);
                const closeTime = parseTimeString(period.closes);
                
                if (currentTime >= openTime && currentTime <= closeTime) {
                    return { 
                        isOpen: true, 
                        text: getTranslation('open_now', 'Open now')
                    };
                }
            }
            
            return { 
                isOpen: false, 
                text: getTranslation('closed_now', 'Closed now')
            };
        }

        function parseTimeString(timeStr) {
            if (!timeStr) return 0;
            
            // Parse format like "T08:00:00"
            const match = timeStr.match(/T(\d{2}):(\d{2})/);
            if (match) {
                const hours = parseInt(match[1]);
                const minutes = parseInt(match[2]);
                return hours * 100 + minutes;
            }
            
            return 0;
        }

