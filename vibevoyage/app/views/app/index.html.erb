<%# app/views/home/index.html.erb - Enhanced Main View %>

<%# Turbo Stream for real-time updates %>
<%#= turbo_stream_from "itinerary_channel:#{current_user&.id || session.id}" %> >

<!-- Hero Section -->
<section class="min-h-screen flex items-center justify-center section-transition section-visible relative overflow-hidden" id="hero-section">
    <div class="container mx-auto px-4 pt-32 pb-20">
        <div class="text-center max-w-7xl mx-auto">
            <!-- Badge -->
            <div class="mb-12">
                <div class="inline-flex items-center gap-3 glass-card px-8 py-4 text-sm font-medium text-slate-300 mb-8 fade-in-up rounded-full">
                    <div class="w-3 h-3 rounded-full bg-gradient-to-r from-green-400 to-blue-400 animate-pulse"></div>
                    <span class="neon-glow">AI-Powered Cultural Curation</span>
                    <div class="w-px h-4 bg-white/20"></div>
                    <span class="text-xs text-slate-500">Next-Gen Travel</span>
                </div>
            </div>
            
            <!-- Main Title -->
            <h1 class="text-6xl md:text-8xl lg:text-9xl font-display font-black tracking-tight mb-12 leading-none fade-in-up" style="animation-delay: 0.2s;">
                Transform your 
                <span class="gradient-text block relative">
                    cultural essence
                    <div class="sparkle" style="top: 20%; right: 10%; animation-delay: 1s;"></div>
                    <div class="sparkle" style="bottom: 30%; left: 15%; animation-delay: 2s;"></div>
                </span>
                <span class="text-slate-400 block text-5xl md:text-7xl lg:text-8xl font-light">into living stories</span>
            </h1>
            
            <!-- Subtitle -->
            <p class="text-xl md:text-3xl text-slate-400 font-light leading-relaxed max-w-5xl mx-auto mb-20 fade-in-up" style="animation-delay: 0.4s;">
                Describe your perfect cultural vibe. Our AI agent orchestrates 
                <span class="text-white font-medium">Qloo's cultural intelligence</span> 
                to design authentic narrative journeys that resonate with your soul.
            </p>
            
            <!-- Form -->
            <%= form_with url: app_create_real_journey_path, local: false, id: 'vibe-form', class: "glass-card-strong p-10 max-w-4xl mx-auto relative fade-in-up hover-lift rounded-3xl", style: "animation-delay: 0.6s;" do |form| %>
                <!-- Icon -->
                <div class="absolute -top-8 left-1/2 transform -translate-x-1/2">
                    <div class="w-16 h-16 rounded-2xl flex items-center justify-center pulse-glow" style="background: linear-gradient(135deg, var(--accent-terracotta), var(--accent-sage));">
                        <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-1l-4 4z" />
                        </svg>
                    </div>
                </div>

                <%= form.label :user_vibe, class: "text-left block text-xl font-semibold text-slate-200 mb-6 flex items-center gap-3" do %>
                    <span class="text-3xl">üé≠</span>
                    <span class="gradient-text">Paint your perfect cultural moment:</span>
                <% end %>
                
                <div class="relative">
                    <%= form.text_area :user_vibe, 
                        rows: 5, 
                        required: true,
                        class: "w-full p-8 text-xl bg-black/40 border-2 border-white/10 focus:border-yellow-400 focus:ring-4 focus:ring-yellow-400/20 resize-none rounded-3xl text-white placeholder-slate-400 transition-all duration-500 font-light leading-relaxed",
                        placeholder: "A contemplative Saturday in Mexico City. I'm drawn to Guillermo del Toro's gothic cinematography, artisanal mezcal, vinyl records from the 80s, and hidden bookshops with rare editions..." %>
                    
                    <!-- Enhanced badges -->
                    <div class="absolute bottom-6 left-6 flex flex-wrap gap-3">
                        <span class="glass-card px-4 py-2 text-xs font-medium text-slate-300 rounded-full border-0">
                            <span class="w-2 h-2 rounded-full bg-green-400 inline-block mr-2"></span>
                            Qloo Enhanced
                        </span>
                        <span class="glass-card px-4 py-2 text-xs font-medium text-slate-300 rounded-full border-0">
                            <span class="w-2 h-2 rounded-full bg-blue-400 inline-block mr-2"></span>
                            AI Curated
                        </span>
                        <span class="glass-card px-4 py-2 text-xs font-medium text-slate-300 rounded-full border-0">
                            <span class="w-2 h-2 rounded-full bg-purple-400 inline-block mr-2"></span>
                            Real-time
                        </span>
                    </div>
                </div>
                
                <!-- Enhanced submit button -->
                <%= form.button type: "submit", id: "submit-btn",
                    class: "mt-8 w-full font-bold py-6 px-10 rounded-3xl transition-all duration-500 text-xl transform hover:scale-[1.02] hover:shadow-2xl flex items-center justify-center gap-4 group text-white relative overflow-hidden",
                    style: "background: linear-gradient(135deg, var(--accent-terracotta), var(--accent-sage), var(--accent-gold)); background-size: 200% 200%;" do %>
                    
                    <!-- Button background animation -->
                    <div class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/10 to-white/0 transform -skew-x-12 translate-x-full group-hover:translate-x-[-200%] transition-transform duration-1000"></div>
                    
                    <svg class="w-6 h-6 group-hover:rotate-12 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.781 0-2.674-2.153-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                    </svg>
                    <span class="relative z-10">Curate my Cultural Journey</span>
                    <svg class="w-6 h-6 group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                    </svg>
                <% end %>
            <% end %>
        </div>
    </div>
</section>

<!-- Processing Section -->
<section class="py-32 px-4 section-transition section-hidden relative" id="processing-section">
    <div class="max-w-5xl mx-auto">
        <div class="glass-card-strong p-12 text-center relative overflow-hidden rounded-3xl">
            <!-- Animated background -->
            <div class="absolute inset-0 bg-gradient-to-r from-purple-500/10 via-blue-500/10 to-green-500/10 animate-pulse"></div>
            
            <div class="relative z-10">
                <!-- Enhanced loading icon -->
                <div class="flex justify-center items-center mb-12">
                    <div class="relative">
                        <div class="w-24 h-24 rounded-full flex items-center justify-center pulse-glow" style="background: radial-gradient(circle, var(--accent-terracotta), rgba(224, 122, 95, 0.3));">
                            <svg class="w-12 h-12 text-white animate-spin" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z"/>
                            </svg>
                        </div>
                        <!-- Orbiting dots -->
                        <div class="absolute inset-0 animate-spin" style="animation-duration: 3s;">
                            <div class="absolute w-2 h-2 bg-white rounded-full top-0 left-1/2 transform -translate-x-1/2"></div>
                        </div>
                        <div class="absolute inset-0 animate-spin" style="animation-duration: 2s; animation-direction: reverse;">
                            <div class="absolute w-2 h-2 bg-yellow-400 rounded-full bottom-0 left-1/2 transform -translate-x-1/2"></div>
                        </div>
                    </div>
                </div>
                
                <h3 class="text-4xl md:text-5xl font-display font-bold text-white mb-6 gradient-text">
                    Decoding your cultural DNA...
                </h3>
                <p class="text-slate-300 text-xl md:text-2xl mb-12 font-light">
                    Our AI is weaving your passions through Qloo's cultural universe
                </p>
                
                <!-- Enhanced progress section -->
                <div class="mb-12">
                    <div class="flex justify-between text-lg text-slate-400 mb-4">
                        <span class="font-medium">Cultural Analysis Progress</span>
                        <span id="progress-percent" class="font-mono">0%</span>
                    </div>
                    
                    <!-- Circular progress -->
                    <div class="flex justify-center mb-8">
                        <div class="relative w-32 h-32">
                            <svg class="w-32 h-32 transform -rotate-90" viewBox="0 0 100 100">
                                <circle cx="50" cy="50" r="45" stroke="rgba(255,255,255,0.1)" stroke-width="8" fill="none"/>
                                <circle 
                                    cx="50" 
                                    cy="50" 
                                    r="45" 
                                    stroke="url(#progress-gradient)" 
                                    stroke-width="8" 
                                    fill="none"
                                    stroke-linecap="round"
                                    class="progress-ring"
                                    id="progress-circle"
                                    style="stroke-dasharray: 283; stroke-dashoffset: 283;"/>
                                <defs>
                                    <linearGradient id="progress-gradient" x1="0%" y1="0%" x2="100%" y2="0%">
                                        <stop offset="0%" style="stop-color: var(--accent-terracotta)"/>
                                        <stop offset="50%" style="stop-color: var(--accent-sage)"/>
                                        <stop offset="100%" style="stop-color: var(--accent-gold)"/>
                                    </linearGradient>
                                </defs>
                            </svg>
                            <div class="absolute inset-0 flex items-center justify-center">
                                <span id="circle-percent" class="text-2xl font-bold gradient-text">0%</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Linear progress bar -->
                    <div class="w-full bg-white/10 rounded-full h-3 overflow-hidden">
                        <div class="vibe-match-bar transition-all duration-1000 h-full rounded-full" id="progress-bar" style="width: 0%;"></div>
                    </div>
                </div>
                
                <!-- Enhanced logs -->
                <div class="glass-card bg-black/60 p-8 rounded-2xl font-mono text-sm text-left space-y-4 border-0 max-h-80 overflow-y-auto" id="processing-logs">
                    <!-- Logs will be added dynamically -->
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Narrative Section -->
<section class="py-32 px-4 section-transition section-hidden" id="narrative-section">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
            <div class="inline-flex items-center gap-3 glass-card px-8 py-4 text-sm font-medium text-slate-300 mb-8 rounded-full">
                <span class="w-3 h-3 rounded-full bg-gradient-to-r from-purple-400 to-pink-400 animate-pulse"></span>
                <span class="neon-glow">Cultural Intelligence Synthesis</span>
            </div>
            <h2 class="text-5xl md:text-6xl font-display font-bold mb-8 gradient-text">
                Your Curation Journey
            </h2>
            <p class="text-xl text-slate-400 max-w-3xl mx-auto font-light leading-relaxed">
                Witness how Qloo's AI transformed your cultural essence into curated experiences
            </p>
        </div>
        <div id="narrative-content" class="glass-card-strong p-12 rounded-3xl hover-lift"></div>
    </div>
</section>

<!-- Timeline Section -->
<section class="py-32 px-4 section-transition section-hidden" id="timeline-section">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-24">
            <div class="inline-flex items-center gap-3 glass-card px-8 py-4 text-sm font-medium text-slate-300 mb-8 rounded-full">
                <div class="w-3 h-3 rounded-full animate-pulse" style="background: linear-gradient(45deg, var(--accent-terracotta), var(--accent-sage));"></div>
                <span class="neon-glow">Your Personalized Cultural Odyssey</span>
            </div>
            <h2 class="text-5xl md:text-7xl lg:text-8xl font-display font-bold mb-8" id="timeline-title">
                Your Adventure in <span class="gradient-text">the World</span>
            </h2>
            <p class="text-xl md:text-2xl text-slate-400 max-w-4xl mx-auto font-light leading-relaxed">
                Each experience carefully orchestrated to create a symphonic narrative that resonates with your unique cultural frequency
            </p>
        </div>
        
        <div class="relative" id="timeline-content">
            <!-- Timeline content will be populated here -->
        </div>
    </div>
</section>

<!-- Summary Section -->
<section class="py-32 px-4 section-transition section-hidden" id="summary-section">
    <div class="max-w-5xl mx-auto text-center">
        <div class="glass-card-strong p-16 rounded-3xl hover-lift">
            <div class="mb-12">
                <div class="w-20 h-20 mx-auto rounded-2xl flex items-center justify-center pulse-glow mb-8" style="background: linear-gradient(135deg, var(--accent-terracotta), var(--accent-sage));">
                    <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                    </svg>
                </div>
                <h3 class="text-5xl md:text-6xl font-display font-bold mb-8 gradient-text">
                    Your cultural symphony awaits
                </h3>
                <p class="text-xl md:text-2xl text-slate-400 mb-16 max-w-3xl mx-auto font-light leading-relaxed">
                    Every moment has been meticulously curated to create a narrative that speaks to your cultural soul
                </p>
            </div>
            
            <div class="grid md:grid-cols-3 gap-6">
                <button class="font-bold py-6 px-8 rounded-2xl transition-all duration-300 text-lg transform hover:scale-105 text-white hover-lift" style="background: linear-gradient(135deg, var(--accent-terracotta), var(--accent-sage));">
                    <span class="text-2xl mr-3">üíæ</span>
                    Save Journey
                </button>
                <button class="glass-card px-8 py-6 rounded-2xl font-semibold text-white hover:bg-white/20 transition-all duration-300 text-lg border-0 hover-lift">
                    <span class="text-2xl mr-3">üîó</span>
                    Share Adventure
                </button>
                <button class="glass-card px-8 py-6 rounded-2xl font-semibold text-white hover:bg-white/20 transition-all duration-300 text-lg border-0 hover-lift" onclick="startNewJourney()">
                    <span class="text-2xl mr-3">üé≠</span>
                    Create Another
                </button>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('vibe-form');
        const submitBtn = document.getElementById('submit-btn');
        const heroSection = document.getElementById('hero-section');
        const processingSection = document.getElementById('processing-section');
        const narrativeSection = document.getElementById('narrative-section');
        const timelineSection = document.getElementById('timeline-section');
        const summarySection = document.getElementById('summary-section');
        
        let currentProcessId = null;
        let statusInterval = null;

        form.addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(form);
            
            submitBtn.disabled = true;
            submitBtn.innerHTML = `
                <div class="w-6 h-6 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                <span class="relative z-10">Orchestrating...</span>
            `;
            
            transitionToSection(processingSection);
            
            // Call to Rails controller
            fetch('<%= app_create_real_journey_path %>', {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
                }
            })
            .then(response => response.json())
            .then(data => {
                console.log('Response:', data);
                if (data.success && data.process_id) {
                    currentProcessId = data.process_id;
                    startStatusPolling();
                } else {
                    showError(data.message || 'Error processing your vibe');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showError('Connection error');
            });
        });

        function transitionToSection(targetSection) {
            const visibleSection = document.querySelector('.section-visible');
            if (visibleSection) {
                visibleSection.classList.remove('section-visible');
                visibleSection.classList.add('section-hidden');
            }

            setTimeout(() => {
                targetSection.classList.remove('section-hidden');
                targetSection.classList.add('section-visible');
                targetSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 600);
        }

        function startStatusPolling() {
            if (!currentProcessId) return;
            
            statusInterval = setInterval(() => {
                fetch(`<%= app_real_status_path('PROCESS_ID') %>`.replace('PROCESS_ID', currentProcessId))
                    .then(response => response.json())
                    .then(data => {
                        console.log('Status response:', data);
                        updateProcessingStatus(data);
                        
                        if (data.status === 'complete' && data.itinerary) {
                            clearInterval(statusInterval);
                            statusInterval = null;
                            
                            setTimeout(() => {
                                showItineraryResults(data.itinerary);
                            }, 1000);
                            
                        } else if (data.status === 'failed' || data.status === 'error') {
                            clearInterval(statusInterval);
                            statusInterval = null;
                            showError(data.message || 'Error processing your vibe');
                        }
                    })
                    .catch(error => {
                        console.error('Status error:', error);
                        clearInterval(statusInterval);
                        showError('Error getting status');
                    });
            }, 2000);
        }

        function updateProcessingStatus(data) {
            const progressBar = document.getElementById('progress-bar');
            const progressPercent = document.getElementById('progress-percent');
            const circlePercent = document.getElementById('circle-percent');
            const progressCircle = document.getElementById('progress-circle');
            const processingLogs = document.getElementById('processing-logs');
            
            const progress = data.progress || 0;
            
            // Update linear progress
            progressBar.style.width = `${progress}%`;
            progressPercent.textContent = `${progress}%`;
            circlePercent.textContent = `${progress}%`;
            
            // Update circular progress
            const circumference = 283;
            const offset = circumference - (progress / 100) * circumference;
            progressCircle.style.strokeDashoffset = offset;
            
            // Enhanced logs simulation
            const enhancedLogs = [
                { progress: 5, message: 'üé≠ Analyzing your cultural essence...', color: 'text-blue-400' },
                { progress: 15, message: 'üîç Deconstructing cultural preferences via LLM...', color: 'text-green-400' },
                { progress: 25, message: 'üåê Querying Qloo\'s cultural universe...', color: 'text-yellow-400' },
                { progress: 40, message: 'üé® Processing: "gothic cinema" ‚Üí Art gallery recommendations', color: 'text-purple-400' },
                { progress: 55, message: 'üç∑ Mapping affinities: mezcal + hidden speakeasies', color: 'text-cyan-400' },
                { progress: 70, message: 'üìö Cultural synthesis: bookshops + vinyl records', color: 'text-orange-400' },
                { progress: 85, message: '‚ú® Weaving your narrative tapestry...', color: 'text-pink-400' },
                { progress: 95, message: 'üéº Orchestrating final cultural symphony...', color: 'text-indigo-400' },
                { progress: 100, message: '‚úÖ Your cultural journey is ready!', color: 'text-green-400' }
            ];
            
            const currentLog = enhancedLogs.find(log => log.progress <= progress) || enhancedLogs[0];
            
            if (processingLogs.children.length === 0 || progress > parseInt(progressPercent.textContent)) {
                const logEntry = document.createElement('div');
                const statusColor = (data.status === 'complete') ? 'text-green-400' : currentLog.color;
                const icon = (data.status === 'complete') ? 
                    `<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>` :
                    `<div class="w-4 h-4 border-2 border-current border-t-transparent rounded-full animate-spin"></div>`;

                logEntry.className = `flex items-center gap-3 ${statusColor} mb-3 fade-in-up`;
                logEntry.innerHTML = `${icon} <span>${data.message || currentLog.message}</span>`;
                
                processingLogs.appendChild(logEntry);
                processingLogs.scrollTop = processingLogs.scrollHeight;
            }
        }

        function showItineraryResults(itinerary) {
            const experiences = itinerary.experiences || [];
            const title = itinerary.title || 'Your Adventure';
            const city = itinerary.city || 'Cultural';
            const narrativeHtml = itinerary.narrative_html;
            
            // Show narrative first if exists
            if (narrativeHtml) {
                const narrativeContent = document.getElementById('narrative-content');
                narrativeContent.innerHTML = narrativeHtml;
                transitionToSection(narrativeSection);
                
                setTimeout(() => {
                    showTimelineAfterNarrative(title, city, experiences);
                }, 3000);
            } else {
                showTimelineAfterNarrative(title, city, experiences);
            }
        }

        function showTimelineAfterNarrative(title, city, experiences) {
            const timelineTitle = document.getElementById('timeline-title');
            const timelineContent = document.getElementById('timeline-content');
            
            timelineTitle.innerHTML = `${title} <span class="gradient-text">${city}</span>`;
            
            if (experiences.length > 0) {
                timelineContent.innerHTML = generateTimelineHTML(experiences);
            } else {
                timelineContent.innerHTML = '<div class="text-center text-slate-400 py-20">No experiences found.</div>';
            }
            
            transitionToSection(timelineSection);
            
            setTimeout(() => {
                summarySection.classList.remove('section-hidden');
                summarySection.classList.add('section-visible');
            }, 2000);
        }

function generateTimelineHTML(experiences) {
    if (!experiences || experiences.length === 0) {
        return '<div class="text-center text-slate-400 py-20">No experiences found</div>';
    }

    const experiencesHTML = experiences.map((exp, index) => {
        const isEven = index % 2 === 0;
        const colors = ['terracotta', 'sage', 'gold'];
        const emojis = ['‚òï', 'üé®', 'üç∏'];
        
        // Extract enhanced data with fallbacks
        const time = exp.time || `${9 + index * 3}:00 ${index < 2 ? 'AM' : 'PM'}`;
        const title = exp.title || 'Cultural Experience';
        const description = exp.description || 'A unique experience curated specifically for you';
        const location = exp.location || exp.title || 'Special Location';
        const area = exp.area || 'Center';
        const duration = exp.duration || '1-2 hours';
        const cultural_explanation = exp.cultural_explanation || exp.why_chosen || 'Curated specifically for your unique cultural vibe.';
        const vibe_match = exp.vibe_match || 95;
        const rating = exp.rating || '4.5';
        const image = exp.image || 'https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?w=400';
        
        // Enhanced contact and location info
        const latitude = exp.latitude;
        const longitude = exp.longitude;
        const website = exp.website;
        const phone = exp.phone;
        const address = exp.address;
        const priceLevel = exp.price_level;
        const priceRange = exp.price_range;
        const hours = exp.hours;
        
        // Enhanced Qloo data
        const qloo_keywords = exp.qloo_keywords || [];
        const categories = exp.categories || [];
        const amenities = exp.amenities || [];
        const accessibility = exp.accessibility || [];
        
        // Generate Google Maps URLs
        const googleMapsUrl = latitude && longitude ? 
            `https://www.google.com/maps/search/?api=1&query=${latitude},${longitude}` : '#';
        const directionsUrl = latitude && longitude ? 
            `https://www.google.com/maps/dir/?api=1&destination=${latitude},${longitude}` : '#';
        
        // Hours status
        const openStatus = hours ? getOpenStatus(hours) : '';
        
        // Price display
        const priceDisplay = priceRange || (priceLevel ? '$'.repeat(priceLevel) : '');
        
