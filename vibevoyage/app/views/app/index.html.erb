                box-shadow: 0 0 20px rgba(245, 158, 11, 0.5);
            `;
            
            visualizer.appendChild(centerNode);
            
            // Connected nodes (Qloo discoveries)
            connections.forEach((connection, index) => {
                const angle = (index / connections.length) * 2 * Math.PI;
                const radius = 60;
                const x = 50 + Math.cos(angle) * 35; // Percentage position
                const y = 50 + Math.sin(angle) * 35;
                
                // Connection line
                const line = document.createElementNS('http://www.w3.org/2000/svg', 'line');
                line.setAttribute('x1', '50%');
                line.setAttribute('y1', '50%');
                line.setAttribute('x2', `${x}%`);
                line.setAttribute('y2', `${y}%`);
                line.setAttribute('stroke', 'rgba(255, 215, 0, 0.6)');
                line.setAttribute('stroke-width', '2');
                line.style.animation = `drawLine 1s ease-out ${index * 0.2}s both`;
                
                // SVG container for lines
                if (!visualizer.querySelector('svg')) {
                    const svg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
                    svg.style.cssText = `
                        position: absolute;
                        top: 0;
                        left: 0;
                        width: 100%;
                        height: 100%;
                        pointer-events: none;
                    `;
                    visualizer.appendChild(svg);
                }
                visualizer.querySelector('svg').appendChild(line);
                
                // Connection node
                const node = document.createElement('div');
                node.className = 'connection-node';
                node.textContent = connection;
                node.style.cssText = `
                    position: absolute;
                    top: ${y}%;
                    left: ${x}%;
                    transform: translate(-50%, -50%);
                    background: linear-gradient(135deg, rgba(59, 130, 246, 0.8), rgba(139, 92, 246, 0.8));
                    color: white;
                    padding: 4px 8px;
                    border-radius: 12px;
