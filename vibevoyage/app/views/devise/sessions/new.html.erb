<!-- app/views/devise/sessions/new.html.erb -->
<div class="min-h-screen flex items-center justify-center px-4">
  <div class="max-w-md w-full">
    <div class="glass-card-strong p-8 rounded-3xl">
      <div class="text-center mb-8">
        <%= link_to root_path, class: "inline-flex items-center gap-3 mb-6" do %>
          <div class="w-12 h-12 rounded-2xl flex items-center justify-center pulse-glow" style="background: linear-gradient(135deg, var(--accent-terracotta), var(--accent-sage));">
            <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" />
            </svg>
          </div>
          <h1 class="text-2xl font-display font-bold gradient-text">VibeVoyage</h1>
        <% end %>
        
        <h2 class="text-3xl font-display font-bold text-white mb-2">Welcome back</h2>
        <p class="text-slate-400">Sign in to continue your cultural journey</p>
      </div>

      <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "space-y-6" do |form| %>
        <div class="space-y-4">
          <div>
            <%= form.label :email, class: "block text-sm font-medium text-slate-300 mb-2" %>
            <%= form.email_field :email, autofocus: true, autocomplete: "email", 
                class: "w-full p-4 bg-black/40 border border-white/10 focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/20 rounded-xl text-white placeholder-slate-400 transition-all duration-300",
                placeholder: "your@email.com" %>
          </div>

          <div>
            <%= form.label :password, class: "block text-sm font-medium text-slate-300 mb-2" %>
            <%= form.password_field :password, autocomplete: "current-password",
                class: "w-full p-4 bg-black/40 border border-white/10 focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/20 rounded-xl text-white placeholder-slate-400 transition-all duration-300",
                placeholder: "Enter your password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= form.check_box :remember_me, class: "rounded border-white/20 bg-black/40 text-yellow-400 focus:ring-yellow-400/20" %>
            <%= form.label :remember_me, "Remember me", class: "ml-2 text-sm text-slate-300" %>
          </div>
        <% end %>

        <div>
          <%= form.submit "Sign In", 
              class: "w-full font-bold py-4 px-6 rounded-xl transition-all duration-300 text-lg text-white",
              style: "background: linear-gradient(135deg, var(--accent-terracotta), var(--accent-sage));" %>
        </div>
      <% end %>

      <div class="mt-6 space-y-4">
        <div class="text-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name), 
              class: "text-sm text-yellow-400 hover:text-yellow-300 transition-colors" %>
        </div>
        
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-white/10"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-transparent text-slate-400">Don't have an account?</span>
          </div>
        </div>
        
        <div class="text-center">
          <%= link_to "Create your account", new_registration_path(resource_name),
              class: "w-full inline-block glass-card px-6 py-3 rounded-xl font-semibold text-white hover:bg-white/10 transition-all duration-300 border-0" %>
        </div>
      </div>
    </div>
  </div>
</div>
