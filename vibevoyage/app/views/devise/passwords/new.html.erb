<!-- app/views/devise/passwords/new.html.erb -->
<div class="min-h-screen flex items-center justify-center py-20 px-4">
  <!-- Floating Orbs -->
  <div class="floating-orb w-64 h-64 top-20 right-20 opacity-40" style="animation-delay: 0s;"></div>
  <div class="floating-orb w-32 h-32 top-1/2 left-10 opacity-30" style="animation-delay: 2s;"></div>

  <div class="w-full max-w-md">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center gap-4 mb-6">
        <div class="w-16 h-16 rounded-2xl flex items-center justify-center pulse-glow" style="background: linear-gradient(135deg, var(--accent-terracotta), var(--accent-sage));">
          <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
        </div>
        <h1 class="text-2xl font-display font-bold gradient-text">VibeVoyage</h1>
      </div>
      
      <h2 class="text-3xl font-display font-bold text-white mb-2">
        Forgot your password?
      </h2>
      <p class="text-slate-400">
        No worries! Enter your email and we'll send you reset instructions.
      </p>
    </div>

    <!-- Form Card -->
    <div class="glass-card-strong p-8 rounded-3xl mb-6">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
        
        <!-- Error Messages -->
        <% if resource.errors.any? %>
          <div class="glass-card bg-red-500/20 border-red-500/30 p-4 rounded-2xl">
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-red-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h4 class="text-red-300 font-semibold text-sm">
                  <%= pluralize(resource.errors.count, "error") %> prohibited this request:
                </h4>
                <ul class="text-red-200 text-sm mt-1 space-y-1">
                  <% resource.errors.full_messages.each do |message| %>
                    <li>• <%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Email Field -->
        <div class="space-y-2">
          <%= f.label :email, class: "block text-sm font-medium text-slate-300" do %>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
              </svg>
              Email Address
            </div>
          <% end %>
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email",
              placeholder: "Enter your email address",
              class: "w-full px-4 py-3 glass-card rounded-xl text-white placeholder:text-slate-400 focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500/50 transition-all duration-300 border-0" %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Send Reset Instructions", 
              class: "w-full py-4 px-6 rounded-xl font-semibold text-white transition-all duration-300 hover:scale-105 focus:ring-4 focus:ring-blue-500/30",
              style: "background: linear-gradient(135deg, var(--accent-terracotta), var(--accent-sage));" %>
        </div>
      <% end %>
    </div>

    <!-- Back to Sign In -->
    <div class="text-center">
      <p class="text-slate-400 text-sm">
        Remember your password? 
        <%= link_to "Sign in here", new_session_path(resource_name), 
            class: "text-blue-400 hover:text-blue-300 font-medium transition-colors" %>
      </p>
    </div>

    <!-- Additional Links -->
    <div class="text-center mt-6">
      <div class="flex justify-center gap-4 text-sm">
        <%= link_to "← Back to Home", root_path, 
            class: "text-slate-400 hover:text-white transition-colors flex items-center gap-1" %>
        
        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Create Account →", new_registration_path(resource_name), 
              class: "text-slate-400 hover:text-white transition-colors flex items-center gap-1" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
