          next if line.empty?
          
          if line.match(/^\d+\.\s*(.+)/)
            current_section = $1
            suggestions << {
              category: current_section,
              items: []
            }
          elsif line.match(/^[-*]\s*(.+)/) && current_section
            suggestions.last[:items] << $1
          end
        end
        
        suggestions
      end
