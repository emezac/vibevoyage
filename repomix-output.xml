    # Cargar la definici√≥n del workflow
    tasks_definition = Workflows::VibeVoyageWorkflow.tasks
    
    puts "=== TASKS DEFINITION ==="
    puts "Type: #{tasks_definition.class}"
    puts "Keys: #{tasks_definition.keys}"
    
    workflow_data = {
      workflow_id: "vibe_#{session_id}",
