      end
    end

    # Verificar tareas espec√≠ficas
    expected_tasks = ['parse_vibe', 'validate_city', 'build_narrative', 'save_itinerary_to_db', 'finalize']
    puts "=== VERIFICANDO TAREAS ESPERADAS ==="
    expected_tasks.each do |task_name|
