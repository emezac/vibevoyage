  transform: translateY(40px);
  animation: fadeInUp 0.8s ease-out forwards;
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(40px); }
  to { opacity: 1; transform: translateY(0); }
}

.timeline-item.revealed {
  opacity: 1;
  transform: translateY(0);
