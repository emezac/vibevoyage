    ActionCable.server.broadcast("itinerary_channel:#{session_id}", {
      type: 'processing_update',
      progress: progress,
      message: message,
      user_vibe: user_vibe,
      city: city_data&.dig(:city),
      html: ApplicationController.render(
        partial: 'itineraries/live_processing_state',
        locals: { 
          progress: progress, 
          message: message, 
          user_vibe: user_vibe,
          city_data: city_data 
