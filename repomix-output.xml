    end
    
    final_score = [base_score + google_bonus + rating_bonus + type_bonus, 100].min
    puts "--- Calculated vibe match: #{final_score}% (base: #{base_score}, google: #{google_bonus}, rating: #{rating_bonus}, type: #{type_bonus})"
    
