  def extract_area_from_address(address)
    return "Centro" unless address
    
    # Extraer √°rea de la direcci√≥n
    areas = ["Malasa√±a", "Centro", "La Latina", "Chueca", "Retiro", "Salamanca"]
    areas.find { |area| address.include?(area) } || "Centro"
  end

